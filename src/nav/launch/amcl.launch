<launch>
  <!-- https://habr.com/ru/post/472984/ -->
  <!-- <param name="/use_sim_time" value="true"/> -->
  <node pkg="amcl" type="amcl" name="amcl" output="screen">
      <remap from="scan" to="/scan"/>
      <param name="odom_frame_id" value="odom"/>
      <param name="odom_model_type" value="diff"/>
      
      <!--DOTO base_link TEST!!!-->
      <param name="base_frame_id" value="base_footprint"/>

      <param name="global_frame_id" value="map"/>
      <param name="transform_tolerance" value="0.2"/>
      <param name="min_particles" value="100"/>
      <param name="max_particles" value="2000"/>
      <param name="save_pose_rate" value="0.5"/>

      
      <param name="gui_publish_rate" value="10.0"/><!--Максимальная скорость (в Гц), с которой сканы и пути публикуются для визуализации. Если это значение -1.0, эта функция отключена-->
      <param name="laser_max_beams" value="280"/>
      <param name="kld_err" value="0.01"/>       <!-- Ошибка между истинным распределением вероятностей и оцененным распределением вероятностей -->
      <param name="kld_z" value="0.5"/>
      <param name="odom_alpha1" value="1"/><!--TEST THIS!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!-->
      <param name="odom_alpha2" value="2"/>
      <param name="odom_alpha3" value="0.5"/>
      <param name="odom_alpha4" value="0.2"/>

      <param name="laser_min_range" value="-1"/><!--0.15-->
      <param name="laser_max_range" value="-1"/><!--12-->

      <param name="laser_z_hit" value="0.2"/>
      <param name="laser_z_rand" value="0.8"/>

      <param name="laser_z_short" value="0.05"/>
      <param name="laser_z_max" value="0.05"/>
      <param name="laser_sigma_hit" value="0.25"/>
      <param name="laser_lambda_short" value="0.1"/>
      <param name="laser_model_type" value="likelihood_field"/>

      <param name="laser_likelihood_max_dist" value="4.0"/>
      <param name="update_min_d" value="0.1"/>
      <param name="update_min_a" value="0.05"/>

      <param name="resample_interval" value="1"/><!--Устанавливает количество обновлений фильтра, необходимых перед повторной выборкой.-->
      <param name="recovery_alpha_slow" value="0.0"/>
      <param name="recovery_alpha_fast" value="0.0"/>
      <param name="use_map_topic" value="false" />
      <param name="first_map_only" value="true" />

      <param name="initial_pose_x" value="0" />
      <param name="initial_pose_y" value="0" />
      <param name="initial_pose_a" value="0" />

      <param name="initial_cov_xx" value="10" />
      <param name="initial_cov_yy" value="10" />
      <param name="initial_cov_aa" value="0.6853" />


  </node>

</launch>